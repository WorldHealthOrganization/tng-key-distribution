{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://worldhealthorganization.github.io/smart-trust/ValueSet-Participants.schema.json",
  "title": "Participants ValueSet Schema",
  "description": "JSON schema for validating participant codes in DID verification methods",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "participant": {
          "type": "string",
          "description": "Participant context definition",
          "const": "https://worldhealthorganization.github.io/smart-trust/ValueSet-Participants"
        }
      },
      "additionalProperties": true
    }
  },
  "definitions": {
    "participantValue": {
      "type": "string",
      "pattern": "^[A-Z]{2,3}$",
      "description": "Valid TNG participant codes (2-3 letter country/organization codes)"
    }
  }
}
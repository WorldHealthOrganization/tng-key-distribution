{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://worldhealthorganization.github.io/smart-trust/ValueSet-KeyUsage.schema.json",
  "title": "Key Usage ValueSet Schema",
  "description": "JSON schema for validating key usage values in DID verification methods",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "keyusage": {
          "type": "string",
          "description": "Key usage context definition",
          "const": "https://worldhealthorganization.github.io/smart-trust/ValueSet-KeyUsage"
        }
      },
      "additionalProperties": true
    }
  },
  "definitions": {
    "keyUsageValue": {
      "type": "string",
      "enum": [
        "SCA",
        "UPLOAD",
        "AUTHENTICATION",
        "DSC"
      ],
      "description": "Valid key usage codes as defined in the TNG key usage value set"
    }
  }
}
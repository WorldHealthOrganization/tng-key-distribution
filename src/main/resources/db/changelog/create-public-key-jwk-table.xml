<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
  <changeSet id="create-info-table" author="laurenz-simon">
    <createTable tableName="public_key_jwk">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="true" primaryKey="true" primaryKeyName="public_key_jwk_id"/>
      </column>
      <column name="kty" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="crv" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="x" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="y" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="x5c" type="VARCHAR(7000)">
        <constraints nullable="true"/>
      </column>
      <column name="verification_method_id" type="BIGINT">
        <constraints nullable="true"/>
       </column> 
    </createTable>
  </changeSet>

</databaseChangeLog>

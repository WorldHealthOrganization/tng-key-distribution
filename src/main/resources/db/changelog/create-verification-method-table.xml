<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
  <changeSet id="create-info-table" author="laurenz-simon">
    <createTable tableName="verification_method">
       <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="verification_method_id"/>
      </column>
      <column name="vm_id" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="type" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="controller" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="decentralized_identifier_id" type="BIGINT">
        <constraints nullable="true"/>
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>

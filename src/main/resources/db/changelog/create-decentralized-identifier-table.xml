<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
  <changeSet id="create-info-table" author="laurenz-simon">
    <createTable tableName="decentralized_identifier">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="true" primaryKey="true" primaryKeyName="decentralized_identifier_id"/>
      </column>
      <column name="did_id" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="context" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
      <column name="controller" type="VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
  <changeSet id="create-info-table" author="laurenz-simon">
    <createTable tableName="proof">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="true" primaryKey="true" primaryKeyName="proof_id"/>
      </column>
      <column name="type" type="VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
      <column name="created" type="VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
       <column name="nonce" type="VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
       <column name="proof_purpose" type="VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
       <column name="verification_method" type="VARCHAR(100)">
        <constraints nullable="true"/>
      </column>
       <column name="jws" type="VARCHAR(500)">
        <constraints nullable="true"/>
      </column>
        <column name="decentralized_identifier_id" type="BIGINT">
      <constraints nullable="true"/>
      </column>

    </createTable>
  </changeSet>

</databaseChangeLog>
